apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: freeipa
spec:
  resources:
    requests:
      storage: 20Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: freeipa
data:
  # https://manpages.ubuntu.com/manpages/focal/man1/ipa-server-install.1.html
  ipa-server-install-options: |
    --unattended

    --domain={{ FreeIPA_domain_name }}
    --realm={{ FreeIPA_realm }}
    --ds-password={{ FreeIPA_ds_password }}
    --admin-password={{ FreeIPA_admin_password }}

    --no-ntp
    --no_hbac_allow

    --setup-dns
    --no-host-dns
    --forwarder={{ FreeIPA_dns_forwarder }}
    --auto-reverse
    --ip-address={{ FreeIPA_container_hostIP }}

    --debug
    --skip-mem-check
  # https://www.freeipa.org/page/Howto/DNS_updates_and_zone_transfers_with_TSIG
  # https://unix.stackexchange.com/questions/523565/how-to-generate-tsig-key-for-certbot-plugin-certbot-dns-rfc2136
  # tsig-keygen keySololab
  ipa-ext.conf: |
    key "keySololab" {
            algorithm {{ FreeIPA_tsig_algorithm }};
            secret "{{ FreeIPA_tsig_secret }}";
    };
---
apiVersion: v1
kind: Pod
metadata:
  name: freeipa
  labels:
    name: freeipa
spec:
  # https://docs.podman.io/en/latest/markdown/podman-kube-play.1.html
  # https://www.freeipa.org/page/Docker#FreeIPA_server_containers
  hostname: "{{ FreeIPA_container_hostname }}"
  # https://stackoverflow.com/questions/43544370/kubernetes-how-to-set-volumemount-user-group-and-file-permissions
  initContainers:
    - name: take-data-dir-ownership
      image: docker.io/library/alpine:3.18
      imagePullPolicy: IfNotPresent
      # Give `dirsrv` user (id 389) permissions a mounted volume
      # https://github.com/grafana/grafana-docker/blob/master/Dockerfile
      command:
        - chmod
        - -R
        - "777"
        - /dev/shm
      volumeMounts:
        - name: dshm
          mountPath: /dev/shm
  containers:
    - name: freeipa
      image: "{{ FreeIPA_container_image }}"
      imagePullPolicy: IfNotPresent
      resources:
        limits:
          memory: "1336Mi"
          cpu: "1000m"
      # https://www.freeipa.org/page/V4/Replica_Conncheck
      # https://docs.podman.io/en/latest/markdown/podman-kube-play.1.html#container-fields
      ports:
        # https://github.com/sameersbn/docker-bind/issues/65
        - name: dns_tcp
          containerPort: 53
          hostIP: "{{ FreeIPA_container_hostIP }}"
          protocol: TCP
        - name: dns_udp
          hostIP: "{{ FreeIPA_container_hostIP }}"
          containerPort: 53
          protocol: UDP

        - name: http
          containerPort: 80
          hostIP: "{{ FreeIPA_container_hostIP }}"
          hostPort: 80
        - name: https
          containerPort: 443
          hostIP: "{{ FreeIPA_container_hostIP }}"
          hostPort: 443
        - name: http-pki
          containerPort: 8080
          hostIP: "{{ FreeIPA_container_hostIP }}"
          hostPort: 8080
        - name: https-pki
          containerPort: 8443
          hostIP: "{{ FreeIPA_container_hostIP }}"
          hostPort: 8443

        - name: ldap
          containerPort: 389
        - name: ldaps
          containerPort: 636

        - name: kerberos_tcp
          containerPort: 88
          protocol: TCP
        - name: kerberos_udp
          containerPort: 88
          protocol: UDP

        - name: kpasswd_tcp
          containerPort: 464
          protocol: TCP
        - name: kpasswd_udp
          containerPort: 464
          protocol: UDP
      env:
        # https://github.com/freeipa/freeipa-container#running-freeipa-server-container:~:text=Alternatively%2C%20the-,IPA_SERVER_IP,-environment%20variable%20via
        - name: IPA_SERVER_IP
          value: "{{ FreeIPA_container_hostIP }}"
        - name: IPA_SERVER_HOSTNAME
          value: "{{ FreeIPA_container_hostname }}"
        - name: DEBUG_TRACE
          value: 1
      # https://github.com/freeipa/freeipa-container/issues/516#issuecomment-1431096973
      livenessProbe:
        initialDelaySeconds: 180
        periodSeconds: 60
        httpGet:
          path: /
          port: 80
      volumeMounts:
        # https://github.com/freeipa/freeipa-container#running-freeipa-server-container
        - name: freeipa
          mountPath: /data
        - name: ipa-server-install-options
          mountPath: /data/ipa-server-install-options
          subPath: ipa-server-install-options
        - name: ipa-ext.conf
          mountPath: /etc/named/ipa-ext.conf
          subPath: ipa-ext.conf
        # https://github.com/freeipa/freeipa-container/issues/449
        # â†“
        # https://github.com/freeipa/freeipa-container/commit/024676573b6a59b4b361e35808f55739bd793e63
        - name: dshm
          mountPath: /dev/shm
        # - name: cgroups
        #   mountPath: /sys/fs/cgroup
        #   readOnly: true
  volumes:
    # https://manpages.debian.org/experimental/freeipa-server/ipa-server-install.1.en.html
    # https://github.com/search?p=1&q=ipa-server-install-options&type=Code
    - name: freeipa
      persistentVolumeClaim:
        claimName: freeipa
    - name: ipa-server-install-options
      configMap:
        name: freeipa
        items:
          - key: ipa-server-install-options
            path: ipa-server-install-options
    - name: ipa-ext.conf
      configMap:
        name: freeipa
        items:
          - key: ipa-ext.conf
            path: ipa-ext.conf
    # https://github.com/freeipa/freeipa-container/commit/024676573b6a59b4b361e35808f55739bd793e63
    - name: dshm
      emptyDir:
        medium: Memory
    # - name: cgroups
    #   hostPath:
    #     path: /sys/fs/cgroup
  dnsConfig:
    nameservers:
      - 127.0.0.1
  # hostAliases:
  #   - ip: "{{ FreeIPA_container_hostIP }}"
  #     hostnames:
  #       - "{{ FreeIPA_container_hostname }}"
  restartPolicy: Never
